<apex:page showHeader="false" sidebar="false" standardStylesheets="false" controller="Vfquotecontroller" action="{!determinePage}" cache="false">
  <html>
    <head>
      <style>
        .container {
          text-align: center;
          margin-top: 100px;
          font-family: Arial, sans-serif;
          color: #333;
        }
        
        .title {
          font-size: 24px;
          font-weight: bold;
          margin-bottom: 20px;
        }
        
        .text {
          font-size: 18px;
          line-height: 1.5;
          margin-bottom: 40px;
        }
        
        .footer {
          font-size: 14px;
          color: #777;
        }
      </style>
        <script>
        function closeForm() {
            window.close(); 
        }
    </script>
    </head>
    <body>
      <div class="container">
        <div class="title">Quote {!messageTitle}</div>
        <div class="text">
          {!messageDescription}
        </div>
        <div class="footer"><button onclick="closeForm()">Close</button></div>
      </div>
    </body>
  </html>
</apex:page>