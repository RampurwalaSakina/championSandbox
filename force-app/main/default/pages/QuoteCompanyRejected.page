        function hidePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
            checkHideBlurBackground();
        }
    function checkHideBlurBackground() {
            var errorPopup = document.getElementById('error-popup');
            var thankYouPopup = document.getElementById('thank-you-popup');
            var blurBackground = document.getElementById('blur-background');
            
            if (errorPopup.style.display === 'none' && thankYouPopup.style.display === 'none') {
                blurBackground.style.display = 'none';
            }
        }
        
        function submitForm() {
            var reason = document.getElementById('reason').value.trim();
            
            if (reason === '') {
                showErrorPopup();
            } else {
                showThankYouPopup();
            }
        }
        function cancelForm() {
            window.close(); 
        }
    </script>
    
