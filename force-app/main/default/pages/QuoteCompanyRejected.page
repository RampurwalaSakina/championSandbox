<apex:page showHeader="false" sidebar="false" standardStylesheets="false" controller="QuoteCompanyRejectController"  action="{!checkStatus}" cache="false">
    <html>
        <head>
          <style>
            .container {
              text-align: center;
              margin-top: 100px;
              font-family: Arial, sans-serif;
              color: #333;
            }
            
            .title {
              font-size: 24px;
              font-weight: bold;
              margin-bottom: 20px;
            }
            
            .text {
              font-size: 18px;
              line-height: 1.5;
              margin-bottom: 40px;
            }
            .footer {
              font-size: 14px;
              color: #777;
            }
            .container2{
                display: flex;
                justify-content: center;
                align-content: center;

            }

            .custom-form {
                background-color: #f2f2f2;
                padding: 20px;
                display: grid;
                justify-content: center;
            }
            .info-message {
                background-color: #e7f3fe;
                color: #0070c0;
                border: 1px solid #0070c0;
                padding: 10px;
                margin-bottom: 10px;
            }
          </style>
            <script>
            function closeForm() {
                window.close(); 
            }
        </script>
        </head>
        <body>

        <div class="container" style="display:{!IF(displayMessage == true, 'block','none')}" >
            <div class="title">Quote {!messageTitle}</div>
            <div class="text">
              {!messageDescription}
            </div>
            <div class="footer"><button onclick="closeForm()">Close</button></div>
          </div>

            <div class="container2" style="display:{!IF(displayMessage == true, 'none','flex')}" >

                <apex:form styleClass="custom-form">
                    <apex:pageMessages />
                    <apex:pageBlock title="Rejection Quote Reason" >
                      <apex:pageBlockSection >
                        <apex:inputTextarea value="{!rejectionReason}" rows="5" cols="80" />
                      </apex:pageBlockSection>

                      <br/>
                      <br/>

                      <apex:pageBlockButtons location="bottom">
                        <apex:commandButton action="{!saveReason}" value="Save" />
                        <button onclick="closeForm()">Close</button>
                      </apex:pageBlockButtons>
                    </apex:pageBlock>
                  </apex:form>     
             </div>
          

        </body>
      </html>
</apex:page>